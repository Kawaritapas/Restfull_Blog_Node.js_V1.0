<%- include("partials/header")%>
<div style="margin-top: 50px;" class="ui main text container segment">
    <h3>Edit <%=blog.title%></h3>
    <hr></hr>
<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]"  value="<%=blog.title%>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%=blog.image%>">
    </div>
    <div class="field">
      <label>Blog description</label>
      <textarea  name="blog[body]" required><%=blog.body%></textarea>
    </div>
    <button class="ui primary button" type="submit">Submit</button>
  </form>
</div>


<%- include("partials/footer")%>
